<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <% @recipes.each do |recipe| %>
      <% shopping_list, _, total_price = @shopping_lists[recipe.id] %>
        <div class="card border-secondary d-flex flex-row justify-content-between bg-dark p-3 mb-3">
          <div>
            <h3 class="card-title">
              <%= link_to recipe.name, recipe_path(recipe.id), class: "text-decoration-none text-light fw-bold" %>
            </h3>
            <p class="card-text">By: <%= recipe.user.name %></p>
          </div>
          <div>
            <p class="card-text">Total items: <%= shopping_list.size %></p>
            <p class="card-text">Total price: <%= number_to_currency(total_price) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
