<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="display-6 text-center">Forgot your password?</h1>

      <%= form_for resource, as: resource_name, url: password_path(resource_name),
        html: { method: :post, class: 'row g-3 my-3' } do |f|
        %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true, autofocus: true, autocomplete: "email" %>
        </div>

        <div>
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
