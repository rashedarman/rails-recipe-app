<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="d-flex justify-content-end">
        <%= link_to "Add Recipe", new_recipe_path, class: "btn btn-primary my-3" %>
      </div>
      <% @recipes.each do |recipe| %>
        <div class="card border-secondary bg-dark mb-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <h3 class="card-title">
                <%= link_to recipe.name, recipe_path(recipe.id), class: "text-decoration-none text-light fw-bold" %>
              </h3>
              <%= link_to "REMOVE", recipe,
                data: { turbo_method: :delete, turbo_confirm: 'Delete this recipe?' },
                class: "link-danger text-decoration-none"
              %>
            </div>
            <p class="card-text"><%= recipe.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
