<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="d-flex justify-content-end">
        <%= link_to "Add Food", new_food_path, class: "btn btn-primary my-3" %>
      </div>
      <table class="table table-dark table-striped table-bordered table-hover align-middle">
        <thead>
          <tr>
            <th>Name</th>
            <th>Measurement Unit</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= food.name %></td>
              <td><%= food.measurement_unit %></td>
              <td><%= number_to_currency(food.price) %></td>
              <td><%= food.quantity.ceil %></td>
              <td><%= link_to "DELETE", food,
                data: { turbo_method: :delete, turbo_confirm: 'Delete this food?' },
                class: "link-danger text-decoration-none" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
