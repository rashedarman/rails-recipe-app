<div class ="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="display-6 text-center mb-5">Shopping List</h1>
      <div class="d-flex justify-content-evenly">
          <p class="fw-bold">Amount of food items to buy: <%= @shopping_list.size %></p>
          <% total_price = 0 %>
          <% @shopping_list.each do |food, details| %>
            <% total_price += details[:quantity] * details[:price] %>
          <% end %>
          <p class="fw-bold">Total value of food needed: <%= number_to_currency(total_price) %></p>
      </div>

      <table class="table table-dark table-striped table-bordered table-hover align-middle">
        <thead>
          <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @shopping_list.each do |food, details| %>
            <tr>
              <td><%= food %></td>
              <td><%= details[:quantity] %></td>
              <td><%= number_to_currency(details[:price] * details[:quantity]) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
